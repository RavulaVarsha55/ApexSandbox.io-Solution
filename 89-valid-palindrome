public Boolean isPalindrome(String str){
//code here
Pattern nonAlphanumeric = Pattern.compile('[^a-zA-Z0-9]');
String string = nonAlphanumeric.matcher(str.toLowerCase()).replaceAll('');
if(string.length()==0){
    return true;
}
Integer l=0;
Integer r=string.length()-1;
    while(l!=string.length()/2){
        if(string.charAt(l)==string.charAt(r)){
            l+=1;
            r-=1;
        }else{
            return false;
        }
    }
    return true;
 // return strin.length()==0?true:strin==strin.reverse()?true:false;  
}